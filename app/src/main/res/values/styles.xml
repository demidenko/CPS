<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents">
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorPrimary">#FF808080</item> <!--- @android:color/tertiary_text_dark -->
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/background</item> <!-- design_dark_default_color_background -->
        <item name="android:textColor">@color/textColor</item>
        <item name="android:editTextColor">@color/textColor</item>
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
    </style>

    <style name="PopupMenu" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupBackground">@color/backgroundAdditional</item>
    </style>

    <style name="RatingGraphButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AddAccountItem">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">18sp</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="TextAbout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="CPSImageButton">
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:foreground">?android:attr/actionBarItemBackground</item>
    </style>
</resources>
