<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:id="@+id/test_buttons_panel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_running_jobs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="JOBS"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/stuff_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text=""
        android:layout_below="@id/test_buttons_panel"
        />

    <LinearLayout
        android:id="@+id/table_handle_colors"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/stuff_textview"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        >

    </LinearLayout>


    <EditText
        android:id="@+id/text_editor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="contestID"
        android:layout_toStartOf="@id/button_watcher"
        android:layout_alignBottom="@id/button_watcher"
        android:layout_centerHorizontal="true"
        android:inputType="numberDecimal"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_watcher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:text="run"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_watcher_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@id/button_watcher"
        android:layout_marginStart="10dp"
        android:text="stop"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_test_notify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/button_watcher"
        android:layout_alignParentEnd="true"
        android:text="notify"
        />



</RelativeLayout>
