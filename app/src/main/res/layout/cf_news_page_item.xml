<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="1dp"
    android:layout_marginBottom="4dp"
    android:layout_marginStart="3dp"
    android:layout_marginEnd="3dp"

    >

    <TextView
        android:id="@+id/news_item_title"
        android:text="TITLE"
        android:textSize="18.5sp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginBottom="1dp"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/news_item_rating"
        />

    <TextView
        android:id="@+id/news_item_author"
        android:text="AUTHOR"
        android:textSize="13sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/news_item_title"
        android:layout_alignStart="@id/news_item_title"
        />

    <TextView
        android:id="@+id/news_item_time"
        android:text="TIME"
        android:textSize="11sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/news_item_author"
        android:layout_alignBottom="@id/news_item_author"
        android:layout_marginBottom="1dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:textColor="@color/blog_time"
        />

    <TextView
        android:id="@+id/news_item_rating"
        android:text="RATING"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@id/news_item_title"
        android:textStyle="bold"
        android:layout_marginStart="3sp"
        />

    <TextView
        android:id="@+id/news_item_comments"
        android:text="COMMENTS"
        android:textSize="13sp"
        android:gravity="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/news_item_title"
        android:layout_toEndOf="@id/news_item_time"
        android:layout_alignParentEnd="true"
        android:singleLine="true"
        />


</RelativeLayout>
