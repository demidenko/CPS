<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/black"
    >

    <TextView
        android:id="@+id/progress_bottom_info_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        app:layout_constraintHorizontal_weight="3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/progress_bottom_info_bar"
        android:text="title"
        android:textColor="@color/textColorAdditional"
        android:typeface="monospace"
        android:layout_margin="5dp"
        android:gravity="center_horizontal"
        />

    <ProgressBar
        android:id="@+id/progress_bottom_info_bar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHorizontal_weight="5"
        app:layout_constraintTop_toTopOf="@id/progress_bottom_info_title"
        app:layout_constraintBottom_toBottomOf="@id/progress_bottom_info_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/progress_bottom_info_title"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_marginEnd="10dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>