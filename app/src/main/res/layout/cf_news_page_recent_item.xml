<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    android:layout_marginStart="3dp"
    android:layout_marginEnd="3dp"

    >

    <TextView
        android:id="@+id/recent_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="â†’"
        android:textColor="@color/blog_time"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="1dp"
        android:textSize="13sp"
        />

    <TextView
        android:id="@+id/news_item_title"
        android:text="TITLE"
        android:textSize="16sp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_toEndOf="@id/recent_arrow"
        />

    <TextView
        android:id="@+id/news_item_author"
        android:text="AUTHOR"
        android:textSize="13sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/news_item_title"
        android:layout_alignParentStart="true"
        />

    <TextView
        android:id="@+id/news_item_comments"
        android:text="COMMENTS"
        android:textSize="13sp"
        android:gravity="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/news_item_title"
        android:layout_toEndOf="@id/news_item_author"
        android:layout_alignParentEnd="true"
        android:singleLine="true"
        android:layout_marginStart="10dp"
        />


</RelativeLayout>
