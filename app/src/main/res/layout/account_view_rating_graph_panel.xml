<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <com.google.android.material.button.MaterialButton
        android:id="@+id/account_view_rating_graph_button_all"
        style="@style/RatingGraphButton"
        android:text="all"
        app:layout_constraintBottom_toTopOf="@id/account_view_rating_graph"
        app:layout_constraintStart_toStartOf="@id/account_view_rating_graph"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/account_view_rating_graph_button_last10"
        style="@style/RatingGraphButton"
        android:text="last 10"
        app:layout_constraintBottom_toTopOf="@id/account_view_rating_graph"
        app:layout_constraintStart_toEndOf="@id/account_view_rating_graph_button_all"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/account_view_rating_graph_button_last_month"
        style="@style/RatingGraphButton"
        android:text="last month"
        app:layout_constraintBottom_toTopOf="@id/account_view_rating_graph"
        app:layout_constraintStart_toEndOf="@id/account_view_rating_graph_button_last10"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/account_view_rating_graph_button_last_year"
        style="@style/RatingGraphButton"
        android:text="last year"
        app:layout_constraintBottom_toTopOf="@id/account_view_rating_graph"
        app:layout_constraintStart_toEndOf="@id/account_view_rating_graph_button_last_month"
        />

    <com.example.test3.account_view.RatingGraphView
        android:id="@+id/account_view_rating_graph"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_margin="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"
        />

</androidx.constraintlayout.widget.ConstraintLayout>