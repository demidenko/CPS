<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <ImageView
        android:id="@+id/account_view_rating_show_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_graph"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/account_view_rating_graph"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        />

    <TextView
        android:id="@+id/account_view_rating_graph_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show rating graph"
        android:textSize="15sp"
        android:textColor="@color/textColorAdditional"
        app:layout_constraintStart_toEndOf="@id/account_view_rating_show_button"
        app:layout_constraintTop_toTopOf="@id/account_view_rating_show_button"
        app:layout_constraintBottom_toBottomOf="@id/account_view_rating_show_button"
        android:layout_marginStart="10dp"
        />

    <com.example.test3.account_view.RatingGraphView
        android:id="@+id/account_view_rating_graph"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_margin="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"
        />

</androidx.constraintlayout.widget.ConstraintLayout>