<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/account_panel_textMain"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/account_panel_textAdditional"
        android:layout_below="@id/account_panel_textMain"
        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:id="@+id/account_panel_reload_button"
        android:src="@drawable/ic_refresh_white"
        android:background="@android:color/transparent"
        android:visibility="gone"
        android:layout_alignParentEnd="true"
        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:id="@+id/account_panel_settings_button"
        android:src="@drawable/ic_settings_white"
        android:background="@android:color/transparent"
        android:visibility="gone"
        android:layout_toStartOf="@id/account_panel_reload_button"
        />

</RelativeLayout>
