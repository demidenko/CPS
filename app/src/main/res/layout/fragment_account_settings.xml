<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/account_settings_userid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:background="@color/backgroundAdditional"
        >

        <TextView
            android:id="@+id/account_settings_userid_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/textColorAdditional"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="userID:"
            android:textSize="18sp"
            />

        <TextView
            android:id="@+id/account_settings_userid_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/account_settings_userid_title"
            app:layout_constraintTop_toBottomOf="@id/account_settings_userid_title"
            android:text="Handle"
            android:textSize="26sp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>