<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        android:icon="@drawable/ic_cf_logo"
        android:title="Codeforces"
        >
        <DropDownPreference
            android:key="@string/news_codeforces_default_tab"
            android:title="Default tab"
            app:useSimpleSummaryProvider="true"
            />

        <SwitchPreference
            android:defaultValue="true"
            android:key="@string/news_codeforces_ru"
            android:title="Russian content"
            android:summaryOn="en + ru blogs"
            android:summaryOff="en blogs only"
            />

        <SwitchPreference
            android:defaultValue="false"
            android:key="@string/news_codeforces_lost_enabled"
            android:title="Lost recent blogs"
            android:summaryOn="enabled"
            android:summaryOff="disabled"
            />

        <SwitchPreference
            android:defaultValue="false"
            android:key="@string/news_codeforces_follow_enabled"
            android:title="Follow"
            android:summaryOn="enabled"
            android:summaryOff="disabled"
            />

    </PreferenceCategory>


    <PreferenceCategory
        android:icon="@drawable/ic_rss_feed"
        android:title="News feeds"
        >

        <CheckBoxPreference
            android:key="@string/news_project_euler_feed"
            android:defaultValue="false"
            android:title="projecteuler.net"
            android:icon="@drawable/ic_projecteuler_logo"
            />

        <CheckBoxPreference
            android:key="@string/news_acmp_feed"
            android:defaultValue="false"
            android:title="acmp.ru"
            />

        <CheckBoxPreference
            android:key="@string/news_zaoch_feed"
            android:defaultValue="false"
            android:title="olympiads.ru/zaoch"
            />
    </PreferenceCategory>

</PreferenceScreen>